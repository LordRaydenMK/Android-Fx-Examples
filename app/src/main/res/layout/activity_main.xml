<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/example01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single API call" />

    <Button
        android:id="@+id/example02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sequential API calls" />

    <Button
        android:id="@+id/example03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Concurrent API calls" />

    <Button
        android:id="@+id/example04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiple API calls" />

    <Button
        android:id="@+id/example05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API call with timeout" />

    <Button
        android:id="@+id/example06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retrying on error" />

</LinearLayout>